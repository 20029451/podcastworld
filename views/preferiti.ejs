<%- include('header', {title, active: 'Preferiti'}); -%>

<main class="container-fluid mt-5">
    <div class="row">
        <div class="col-10 mx-auto">
        <h3>Preferiti:</h3>
          <table class="table">
            <thead class="thead-primary">
                <tr>
                  <th>Audio</th>
                  <th>Titolo</th>
                  <th>Descrizione</th>
                  <th>Data</th>
                  <th>Sponsor</th>
                  <th>Costo</th>
                </tr>
            </thead>
            <tbody>
              <% preferititotali.forEach((preferito) => { %>
                <%- include('preferiti-partial', {preferito}); -%>
              <% }); %>
            </tbody>
          </table>
        </div>
    </div>
</main>

<%- include('footer'); -%>