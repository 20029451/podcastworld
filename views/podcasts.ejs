<%- include('header', {title, active: 'podcast'}); -%>

<main class="container-fluid mt-5">
    <div class="row">
        <div class="col-11 mx-auto">
          <table class="table">
            <thead class="thead-primary">
                <tr>
                  <th>Copertina</th>
                  <th>Titolo</th>
                  <th>Descrizione</th>
                  <th>Categoria</th>
                  <th>Autore</th>
                </tr>
            </thead>
            <tbody>
              <% podcasts.forEach((podcast) => { %>
                <%- include('podcasts-partial', {podcast}); -%>
              <% }); %>
            </tbody>
          </table>
        </div>
    </div>
</main>

<%- include('footer'); -%>