<%- include('header', {title, active: 'Aggiungi Serie'}); -%>

<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-8 mx-auto">
          <form method="POST" action="/gestione/aggiungi-serie" class="col-6 mx-auto" encType="multipart/form-data">            
            <div class="form-group">
              <label for="titolo">Titolo</label>
              <input type="text" name="titolo" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="descrizione">Descrizione</label>
                <input type="text" name="descrizione" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="categoria">Categoria</label>
                <input type="text" name="categoria" class="form-control" required />
            </div>

            <!--Prova upload file copertina-->
            <!--<form ref='uploadForm' id='uploadForm' action='http://localhost:3000/upload' method='post' encType="multipart/form-data">-->
            <div class="form-group">
              <label for="copertina">Copertina</label>
              <br>
              <input type="file" name="copertina" required />
            </div>
              <!--<input type='submit' value='Upload!'/>-->
            <!--</form>-->

            <!--Parte form vecchia-->
            <!--<div class="form-group">
                <label for="copertina">Copertina</label>
                <input type="text" name="copertina" class="form-control" required />
            </div>-->

            <div class="form-group">
                <label for="autore"></label>
                <input type="hidden" name="autore" class="form-control" value="<%= params %>" />
            </div>

          <button type="submit" class="btn btn-primary">Aggiungi</button>
          </form>
        </div>
    </div>
</main>

<%- include('footer'); -%>