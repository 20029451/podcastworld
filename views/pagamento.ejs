<%- include('header', {message}); -%>

<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-8 mx-auto">
          <form method="POST" action="/checkout" id="payment-form" class="col-6 mx-auto">            
            <div class="form-group">
              <input type="hidden" name="id_episodio" class="form-control" value="<%= id_episodio %>" />
            </div>

            <div class="form-group">
              <input type="hidden" name="id_serie" class="form-control" value="<%= id_serie %>" />
            </div>

            <div class="form-group">
              <label for="cardnumber">Numero Carta</label>
              <input type="text" name="cardnumber" class="form-control" maxlength="16" minlength="16" required />
            </div>
        
            <div class="form-group">
              <label for="mese">Mese</label>
              <input type="text" name="mese" class="form-control" placeholder="MM" maxlength="2" minlength="2" required />
            </div>

            <div class="form-group">
              <label for="anno">Anno</label>
              <input type="text" name="anno" class="form-control" placeholder="YYYY" maxlength="4" minlength="4" required />
            </div>

            <div class="form-group">
              <label for="cvv">CVV</label>
              <input type="text" name="cvv" class="form-control" maxlength="3" minlength="3" required />
            </div>
            <button type="submit" class="btn btn-primary">Conferma acquisto</button>
          </form>
        </div>
    </div>
</main>

<%- include('footer'); -%>